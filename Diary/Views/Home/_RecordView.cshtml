@model IEnumerable<Diary.Entities.DTOs.Record.RecordViewDTO>

<div class="content">
	<div class="container-fluid">
		@foreach (var record in Model)
		{
			<div class="row">
				<div class="col-12">
					<div class="card">

						<div class="card-header card-header-warning">
							<div class="row d-flex">
								<div class="col">
									<a asp-action="Update" asp-controller="Record"
									   asp-route-id="@record.Id">
										<h4 class="card-title "><b>@record.Name</b></h4>
									</a>
								</div>

								@if (record.AbilityToRemove)
								{
									<div class="col-1 my-auto">
										<form asp-action="Delete" asp-controller="Record" asp-route-id="@record.Id"
											  method="post">
											<button type="submit" style="border: none; background: none;"
													data-toggle="tooltip" data-placement="top" title="Delete">
												<img src="~/assets/img/delete_forever-white-24dp.svg" />
											</button>
										</form>
									</div>
								}

							</div>
						</div>

						<div class="card-body ">
							<a asp-action="Update" asp-controller="Record" asp-route-id="@record.Id">
								<div class="row mt-3 mb-2">
									<div class="col-md-12">
										<div class="form-group ml-2">
											<p>@record.DecryptedText</p>
										</div>
									</div>
								</div>
							</a>
							<div class="px-2">
								<hr class="bg-warning" />
							</div>
						</div>
						
						<div class="card-footer mt-0">
							<div class="text-muted">
								<div class="row">
									<div class="col ml-5">
										<small>Modified: @record.Modified</small>
									</div>
								</div>

								<div class="row">
									<div class="col ml-5">
										<small>Created: @record.Created</small>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>